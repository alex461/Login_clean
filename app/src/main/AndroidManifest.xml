<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alex.app_clean">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera2"
                  android:required="false"

        />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.view.Create_account"
            android:parentActivityName=".login.view.Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.view.Login" />
        </activity>
        <activity android:name=".activity.ContainerActivity" />
        <activity android:name=".activity.PictureDetailActivity" />
        <activity android:name=".post.view.NewPostActivity"></activity>
    </application>

</manifest>